<main class="mt-5">
    <div class="container">
        <div class="card mx-auto" style="width: 550px">
            <div class="card-header">
                <img class="card-img-top mx-auto m-2" src="/img/logo.png" alt="logo" style="width: 150px; height:150px;display:block;">
                <h3 class="text-uppercase text-center p-4">Iniciar Sesión</h3>
            </div>
            <div class="card-body">
                {{#if error_msg}}
                    <div class="alert alert-danger">{{error_msg}}</div>
                {{/if}}
                <form action="/login" method="POST">

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="contrasena" class="form-label">Contraseña</label>
                        <input type="password" class="form-control" id="contrasena" name="contrasena" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Iniciar Sesión</button>
                </form>
            </div>
        </div>
    </div>
</main>
