<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Editando Usuario </h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{usuario.id}}" method="post">
                        <div class="input-group mt-2">
                            <label for="name" class="input-group-text"> Nombres </label>
                            <input class="form-control" type="text" name="name" id="name" value="{{usuario.nombre}}"
                                autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="lastname" class="input-group-text"> Apellidos </label>
                            <input class="form-control" type="text" name="lastname" id="lastname"
                                value="{{usuario.apellidos}}" autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="email" class="input-group-text"> Email </label>
                            <input class="form-control" type="email" name="email" id="email" value="{{usuario.email}}"
                                autofocus required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="contrasena" class="input-group-text"> Contrase√±a </label>
                            <input type="password" class="form-control" id="contrasena" name="contrasena">
                        </div>
                        <div class="input-group mt-2">
                            <label for="edad" class="input-group-text"> Edad </label>
                            <input class="form-control" type="number" name="edad" id="edad" value="{{usuario.edad}}"
                                required>
                        </div>
                        <div class="input-group mt-2">
                            <label for="rol" class="input-group-text"> Rol </label>
                            <select class="form-control" id="rol" name="rol" required>
                                <option value="admin">Admin</option>
                                <option value="normal"> Normal</option>
                            </select>
                        </div>
                        <div class="form-group mt-4 d-grid gap-2">
                            <button type="submit" class="btn btn-primary"> Actualizar Usuario </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>